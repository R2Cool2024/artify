<%= simple_form_for(@art, data: { controller: "character-count" }) do |f| %>
  <%= f.input :name, label: "Name (Min. 2 char.)" %>
  <%= f.input :category, :collection => Art::CATEGORY %>
  <%= f.input :description, label: "Description (Min. 10 char.)", input_html: { data_character_count_target: "text", data_action: "keyup->character-count#updateCounter" } %>
  <%# <div
      id="counter"
      class="m-2 p-1 b-1"
      data-character-count-target="counter"
    ></div> %>
  <%= f.input :year %>
  <%= f.input :artist, :collection => Artist.all %>
  <%= f.input :price %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>
