<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
      <%= image_tag "logo_artify.png" %>
</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
          <li class="nav-item active">
            <%= link_to "Rent my art", new_art_path, class: "darkgreenbtn"%>
          </li>
          <li class="nav-item">
            <% if current_user %>
              <%= link_to "My profile", user_path(current_user.id), class: "darkgreenbtn" %>
            <% else %>
              <%= link_to "Log in", user_session_path, class: "darkgreenbtn" %>
            <% end %>
          </li>
          <li class="nav-item dropdown">
            <img class="avatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Rent a new artwork", new_art_path, class: "dropdown-item"%>
              <%# <a class="dropdown-item" href="#">Another action</a> %>
              <% if current_user %>
                <%= link_to "My profile", user_path(current_user.id), class: "dropdown-item"%>
                <%= link_to "Log out", destroy_user_session_path, class: "dropdown-item", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
              <% else %>
                <%= link_to "Log in", user_session_path, class: "dropdown-item" %>
              <% end %>
            </div>
          </li>
          <!--li class="nav-item"-->
          <!--/li-->
      </ul>
    </div>
  </div>
</div>
